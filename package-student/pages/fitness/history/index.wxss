page {
  background-color: #f5f7fa;
  padding: 32rpx;
}

.container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.grade-badge {
  background: #E8F5E9;
  color: #2E7D32;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.date {
  font-size: 24rpx;
  color: #999;
}

.record-body {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.score-box {
  display: flex;
  flex-direction: column;
}

.score-val {
  font-size: 48rpx;
  font-weight: bold;
}

.score-val.pass {
  color: #2E7D32;
}

.score-val.fail {
  color: #D32F2F;
}

.score-label {
  font-size: 24rpx;
  color: #999;
}

.info-box {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  font-size: 28rpx;
  color: #666;
}

.status {
  margin-top: 8rpx;
  font-size: 24rpx;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.empty-state {
  text-align: center;
  color: #999;
  margin-top: 100rpx;
  font-size: 30rpx;
}