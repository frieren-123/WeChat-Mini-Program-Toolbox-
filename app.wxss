page {
  /* 葬送的芙莉莲主题色系 */
  /* 主色：苍穹之蓝 (芙莉莲的眼睛/天空) - 柔和版 */
  --primary: #89C4E1; 
  --primary-light: #E3F2FD;
  
  /* 辅色：魔法紫 (魔法光效) - 柔和版 */
  --accent: #B39DDB;
  
  /* 装饰色：古金 (法杖/遗迹) */
  --gold: #D4AF37;
  
  /* 自然色：森林绿 (费伦/自然) */
  --nature: #A5D6A7;

  /* 功能色 (低饱和度) */
  --danger: #EF9A9A;
  --warning: #FFE082;
  --success: #A5D6A7;
  
  /* 中性色 - 纸张/羊皮纸质感 */
  --bg-body: #F9F9F7; /* 仿古纸白 */
  --bg-card: #FFFFFF;
  --text-main: #4A4A4A; /* 深灰，比纯黑更柔和 */
  --text-secondary: #9E9E9E;
  --border: #E0E0E0;

  background: var(--bg-body);
  /* 调整背景：顶部天空蓝 -> 底部温暖羊皮纸色，避免底部太白 */
  background-image: linear-gradient(to bottom, #E6F3FA 0%, #FDF6E3 100%);
  background-attachment: fixed; 
  
  color: var(--text-main);
  /* 字体调整：英文使用衬线体保持魔法感，中文使用圆体(Yuanti)增加软萌感 */
  font-family: 'Times New Roman', 'Yuanti SC', 'YouYuan', 'STYuanti', 'PingFang SC', sans-serif;
  font-size: 32rpx;
  box-sizing: border-box;
  padding-bottom: env(safe-area-inset-bottom);
}

view, button, text, input, textarea {
  box-sizing: border-box;
}

.container {
  padding: 32rpx;
}

/* 通用卡片样式：更轻盈的投影 + 装饰性边框 */
.card {
  background: var(--bg-card);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(137, 196, 225, 0.1); /* 淡淡的蓝色光晕 */
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(212, 175, 55, 0.1); /* 极淡的金色边框 */
}

.muted {
  color: var(--text-secondary);
}

/* 按钮点击态 */
.hover-btn {
  opacity: 0.8;
  transform: scale(0.99);
}
