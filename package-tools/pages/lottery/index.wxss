page {
  background-color: #f5f7fa;
  padding: 32rpx;
  box-sizing: border-box;
}

.container {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  padding-bottom: 60rpx;
}

.tabs {
  display: flex;
  background: #fff;
  padding: 8rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: #E3F2FD;
  color: #1565C0;
  font-weight: 600;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 24rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.subtitle {
  font-size: 24rpx;
  color: #999;
}

.input-area {
  width: 100%;
  height: 300rpx;
  background: #f9f9f9;
  border-radius: 16rpx;
  padding: 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.actions {
  display: flex;
  justify-content: flex-end;
  gap: 24rpx;
  margin-top: 24rpx;
}

.btn-clear, .btn-paste, .btn-template {
  font-size: 26rpx;
  padding: 12rpx 32rpx;
  border-radius: 32rpx;
  background: #f5f5f5;
  color: #666;
}

.btn-paste {
  background: #E3F2FD;
  color: #1565C0;
}

.btn-template {
  background: #FFF3E0;
  color: #EF6C00;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.label {
  font-size: 30rpx;
  color: #333;
}

.input-num {
  width: 120rpx;
  height: 80rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
}

.btn-start {
  background: #1565C0;
  color: #fff;
  border-radius: 56rpx;
  font-size: 34rpx;
  font-weight: 500;
  height: 96rpx;
  line-height: 96rpx;
  margin-top: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(21, 101, 192, 0.3);
}

.btn-start:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* Modal */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  backdrop-filter: blur(4px);
}

.modal-content {
  width: 600rpx;
  max-height: 80vh;
  background: #fff;
  border-radius: 32rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  padding: 0 10rpx;
}

.result-scroll {
  flex: 1;
  min-height: 200rpx;
  max-height: 600rpx;
}

.result-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.rank {
  font-size: 28rpx;
  color: #999;
  width: 120rpx;
}

.name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.group-item {
  margin-bottom: 32rpx;
}

.group-title {
  font-size: 28rpx;
  color: #1565C0;
  background: #E3F2FD;
  display: inline-block;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.group-members {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.group-members text {
  background: #f5f5f5;
  padding: 8rpx 20rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #333;
}

.btn-copy {
  margin-top: 32rpx;
  background: #f5f5f5;
  color: #333;
  border-radius: 48rpx;
  font-size: 30rpx;
}