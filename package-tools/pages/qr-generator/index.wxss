.textarea {
  width: 100%;
  min-height: 240rpx;
  padding: 24rpx;
  background: var(--bg-body);
  border-radius: 16rpx;
  font-size: 32rpx;
  color: var(--text-main);
}

.btn-generate {
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 48rpx;
  background: linear-gradient(135deg, #AF52DE, #5856D6);
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(175, 82, 222, 0.3);
  transition: opacity 0.2s;
}

.btn-generate:active {
  opacity: 0.8;
}

.result-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
}

.qr-image {
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 24rpx;
}

.hint {
  font-size: 24rpx;
  text-align: center;
}
