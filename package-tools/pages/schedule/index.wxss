page {
  background: linear-gradient(180deg, #F9F9F7 0%, #E8F4F8 100%);
  min-height: 100vh;
}

.container {
  padding: 32rpx;
  padding-bottom: 60rpx;
}

/* 页面标题 */
.page-header {
  text-align: center;
  padding: 40rpx 0 48rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #4A4A4A;
  letter-spacing: 4rpx;
}

.page-subtitle {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
  font-style: italic;
}

/* 上传区域 */
.upload-section {
  padding: 0 16rpx;
}

.upload-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(137, 196, 225, 0.15);
  border: 1rpx solid rgba(137, 196, 225, 0.2);
}

.upload-card.time-card {
  background: rgba(255, 255, 255, 0.8);
}

.upload-icon-wrap {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 24rpx;
  background: linear-gradient(135deg, #89C4E1 0%, #B39DDB 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-icon-wrap.small {
  width: 80rpx;
  height: 80rpx;
}

.upload-icon-inner {
  font-size: 56rpx;
  color: #fff;
  font-weight: 300;
  line-height: 1;
}

.upload-icon-inner.small {
  font-size: 40rpx;
}

.upload-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #4A4A4A;
  margin-bottom: 12rpx;
}

.upload-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 32rpx;
}

.upload-btn {
  display: inline-block;
  padding: 20rpx 64rpx;
  background: linear-gradient(135deg, #89C4E1 0%, #B39DDB 100%);
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 40rpx;
}

.upload-btn.secondary {
  background: #f5f5f5;
  color: #666;
}

.demo-tip {
  text-align: center;
  padding: 32rpx;
  font-size: 24rpx;
  color: #89C4E1;
}

/* 加载状态 */
.loading-section {
  padding: 80rpx 32rpx;
}

.loading-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 64rpx 32rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.loading-animation {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  background: #89C4E1;
  border-radius: 50%;
  animation: bounce 1.4s infinite ease-in-out both;
}

.dot1 { animation-delay: -0.32s; }
.dot2 { animation-delay: -0.16s; }
.dot3 { animation-delay: 0s; }

@keyframes bounce {
  0%, 80%, 100% { transform: scale(0); }
  40% { transform: scale(1); }
}

.loading-text {
  font-size: 32rpx;
  color: #4A4A4A;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.loading-hint {
  font-size: 24rpx;
  color: #999;
}

/* 确认界面 */
.confirm-section {
  padding: 0 16rpx;
}

.confirm-header {
  text-align: center;
  margin-bottom: 32rpx;
}

.confirm-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #4A4A4A;
  margin-bottom: 8rpx;
}

.confirm-hint {
  font-size: 24rpx;
  color: #999;
}

.compare-container {
  display: flex;
  gap: 16rpx;
  height: 600rpx;
  margin-bottom: 32rpx;
}

.compare-left,
.compare-right {
  flex: 1;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.original-image {
  width: 100%;
}

.recognized-schedule {
  padding: 16rpx;
}

.day-block {
  margin-bottom: 20rpx;
}

.day-header {
  font-size: 26rpx;
  font-weight: 600;
  color: #89C4E1;
  margin-bottom: 8rpx;
  padding-bottom: 8rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.course-item-mini {
  padding: 12rpx 0;
  border-bottom: 1rpx dashed #f5f5f5;
}

.course-name-mini {
  display: block;
  font-size: 24rpx;
  color: #4A4A4A;
  font-weight: 500;
}

.course-time-mini,
.course-room-mini {
  font-size: 20rpx;
  color: #999;
  margin-right: 12rpx;
}

.confirm-actions {
  display: flex;
  gap: 24rpx;
}

.confirm-btn {
  flex: 1;
  text-align: center;
  padding: 28rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.confirm-btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn.confirm {
  background: linear-gradient(135deg, #89C4E1 0%, #B39DDB 100%);
  color: #fff;
}

/* 课表展示 */
.schedule-section {
  padding: 0 16rpx;
}

/* 今日高亮 */
.today-highlight {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(137, 196, 225, 0.15);
  border-left: 8rpx solid #89C4E1;
}

.today-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.today-label {
  font-size: 32rpx;
  font-weight: 600;
  color: #4A4A4A;
}

.today-date {
  font-size: 24rpx;
  color: #999;
}

.today-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.today-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  position: relative;
}

.today-item.current {
  background: linear-gradient(135deg, rgba(137, 196, 225, 0.15) 0%, rgba(179, 157, 219, 0.15) 100%);
  border: 1rpx solid rgba(137, 196, 225, 0.3);
}

.today-time {
  font-size: 24rpx;
  color: #89C4E1;
  font-weight: 500;
  width: 160rpx;
}

.today-info {
  flex: 1;
}

.today-name {
  display: block;
  font-size: 28rpx;
  color: #4A4A4A;
  font-weight: 500;
}

.today-room {
  font-size: 22rpx;
  color: #999;
}

.current-badge {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 20rpx;
  color: #fff;
  background: linear-gradient(135deg, #89C4E1 0%, #B39DDB 100%);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

/* 无课提示 */
.no-class-today {
  background: #fff;
  border-radius: 24rpx;
  padding: 48rpx;
  text-align: center;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.no-class-icon {
  display: block;
  font-size: 48rpx;
  color: #89C4E1;
  margin-bottom: 12rpx;
}

.no-class-text {
  font-size: 28rpx;
  color: #999;
}

/* 完整课表 */
.full-schedule {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

.schedule-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.schedule-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #4A4A4A;
}

.schedule-actions {
  display: flex;
  gap: 24rpx;
}

.action-btn {
  font-size: 26rpx;
  color: #89C4E1;
}

.action-btn.danger {
  color: #FF6B6B;
}

.schedule-scroll {
  width: 100%;
}

.schedule-table {
  display: table;
  width: max-content;
  min-width: 100%;
}

.table-header {
  display: flex;
  background: #f9f9f9;
  border-radius: 12rpx;
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid #f5f5f5;
}

.table-cell {
  min-width: 140rpx;
  padding: 16rpx 12rpx;
  font-size: 22rpx;
  color: #666;
  text-align: center;
}

.table-cell.header {
  font-weight: 600;
  color: #4A4A4A;
  background: #f9f9f9;
}

.table-cell.time-cell {
  min-width: 160rpx;
  font-size: 20rpx;
  color: #999;
}

.cell-course {
  background: linear-gradient(135deg, rgba(137, 196, 225, 0.2) 0%, rgba(179, 157, 219, 0.2) 100%);
  border-radius: 8rpx;
  padding: 8rpx;
  margin: 4rpx 0;
}

.cell-name {
  display: block;
  font-size: 20rpx;
  color: #4A4A4A;
  font-weight: 500;
}

.cell-room {
  font-size: 18rpx;
  color: #999;
}
