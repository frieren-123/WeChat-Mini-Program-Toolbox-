.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 24rpx;
  padding: 24rpx 0;
  border-bottom: 1rpx solid var(--border);
}

.row:last-child {
  border-bottom: none;
}

.label {
  width: 120rpx;
  font-weight: 500;
  color: var(--text-main);
}

.picker {
  padding: 20rpx 32rpx;
  background: var(--bg-body);
  border-radius: 16rpx;
  min-width: 200rpx;
  text-align: center;
  color: var(--primary);
  font-weight: 600;
}

.input {
  flex: 1;
  padding: 20rpx 32rpx;
  background: var(--bg-body);
  border-radius: 16rpx;
  min-width: 0; /* Allow flex shrink */
  text-align: right;
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-main);
  height: 88rpx; /* Ensure height */
}

.result {
  margin-top: 48rpx;
  padding-top: 32rpx;
  border-top: 1rpx dashed var(--border);
  text-align: center;
}

.resultValue {
  margin-top: 16rpx;
  font-size: 64rpx;
  font-weight: 800;
  color: var(--primary);
  word-break: break-all;
}
