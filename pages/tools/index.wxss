.container {
  padding: 32rpx;
  padding-bottom: 160rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  margin-bottom: 32rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

/* 分类切换 */
.tab-switch {
  display: flex;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.tab-switch .tab-item {
  flex: 1;
  padding: 24rpx 0;
  text-align: center;
  font-size: 30rpx;
  color: #999;
  background: #fff;
  border-radius: 20rpx;
  transition: all 0.3s;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.tab-switch .tab-item.active {
  background: linear-gradient(135deg, #89C4E1, #B39DDB);
  color: #fff;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(137, 196, 225, 0.4);
}

.grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.card {
  border-radius: 24rpx;
  padding: 24rpx;
  height: 240rpx;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  transition: transform 0.1s;
}

.card:active {
  transform: scale(0.98);
}

.card-content {
  z-index: 2;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.card-desc {
  font-size: 22rpx;
  color: rgba(0,0,0,0.5);
  display: block;
}

.card-icon {
  position: absolute;
  right: -20rpx;
  bottom: -20rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  opacity: 0.8;
  transform: rotate(-10deg);
}

/* 课表区域 */
.schedule-section {
  margin-top: 16rpx;
}

/* 空状态 */
.schedule-empty {
  background: #fff;
  border-radius: 32rpx;
  padding: 80rpx 48rpx;
  text-align: center;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.06);
}

.empty-icon-wrap {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 32rpx;
  background: linear-gradient(135deg, #89C4E1, #B39DDB);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(137, 196, 225, 0.4);
}

.empty-icon {
  font-size: 56rpx;
  color: #fff;
  font-weight: 300;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #4A4A4A;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-btn {
  display: inline-block;
  padding: 24rpx 64rpx;
  background: linear-gradient(135deg, #89C4E1, #B39DDB);
  color: #fff;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(137, 196, 225, 0.4);
}

.empty-btn:active {
  transform: scale(0.95);
}

.demo-link {
  font-size: 24rpx;
  color: #89C4E1;
  margin-top: 24rpx;
}

/* 课表内容 */
.schedule-content {
  background: #fff;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.06);
}

.today-section {
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #4A4A4A;
}

.today-date {
  font-size: 24rpx;
  color: #89C4E1;
}

.today-empty {
  text-align: center;
  padding: 48rpx 0;
  color: #999;
  font-size: 28rpx;
}

.course-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.course-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #F9F9F7;
  border-radius: 20rpx;
}

.course-time {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
  flex-shrink: 0;
  border-right: 2rpx solid rgba(137, 196, 225, 0.3);
  margin-right: 24rpx;
  padding-right: 24rpx;
}

.time-start {
  font-size: 28rpx;
  font-weight: 600;
  color: #89C4E1;
}

.time-end {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

.course-info {
  flex: 1;
}

.course-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #4A4A4A;
  display: block;
  margin-bottom: 8rpx;
}

.course-location {
  font-size: 24rpx;
  color: #999;
}

/* 操作按钮 */
.schedule-actions {
  display: flex;
  gap: 16rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  flex: 1;
  padding: 20rpx 0;
  text-align: center;
  background: linear-gradient(135deg, #89C4E1, #B39DDB);
  color: #fff;
  font-size: 28rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(137, 196, 225, 0.3);
}

.action-btn.secondary {
  background: #F0F4F8;
  color: #666;
  box-shadow: none;
}

.action-btn:active {
  transform: scale(0.98);
}
