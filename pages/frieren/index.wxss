page {
  background-color: #F9F9F7;
}

.container {
  padding: 24rpx;
  padding-bottom: 120rpx;
}

/* 页面标题 */
.page-header {
  text-align: center;
  padding: 32rpx 0 24rpx;
}

.page-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #4A4A4A;
  letter-spacing: 4rpx;
  font-family: 'Georgia', serif;
}

/* 分类导航 */
.category-scroll {
  white-space: nowrap;
  margin-bottom: 32rpx;
}

.category-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 28rpx;
  margin-right: 12rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s;
}

.category-item.active {
  background: linear-gradient(135deg, #89C4E1, #B39DDB);
}

.category-item.active .category-name {
  color: #fff;
}

.category-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.category-name {
  font-size: 22rpx;
  color: #666;
}

/* 内容区域 */
.content-area {
  margin-bottom: 32rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #4A4A4A;
}

.title-count {
  font-size: 24rpx;
  color: #999;
}

/* 物品卡片网格 */
.item-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.item-card {
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: transform 0.3s;
}

.item-card:active {
  transform: scale(0.98);
}

.item-image {
  width: 100%;
  height: 200rpx;
  background: #eee;
}

.item-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #4A4A4A;
  padding: 16rpx 20rpx 8rpx;
}

.item-location {
  font-size: 22rpx;
  color: #999;
  padding: 0 20rpx 16rpx;
}

/* 音乐列表 */
.music-list {
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.music-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.music-item:last-child {
  border-bottom: none;
}

.music-info {
  display: flex;
  flex-direction: column;
}

.music-name {
  font-size: 28rpx;
  color: #4A4A4A;
  font-weight: 500;
}

.music-artist {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

.music-icon {
  font-size: 32rpx;
  color: #89C4E1;
}

/* 空状态 */
.empty-tip {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 底部提示 */
.footer-tip {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 24rpx;
  line-height: 1.8;
}

.footer-tip .highlight {
  color: #89C4E1;
  display: block;
}