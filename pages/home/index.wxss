/** index.wxss **/
page {
  background-color: #F9F9F7; /* 仿古纸白 */
  padding-bottom: 40rpx;
}

.container {
  padding: 32rpx;
}

/* 顶部欢迎区 */
.header {
  margin-bottom: 48rpx;
  padding-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.greeting-box {
  display: flex;
  flex-direction: column;
}

.greeting-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #4A4A4A;
  line-height: 1.2;
  /* 移除强制衬线体，继承 app.wxss 的混合字体设置 */
}

.greeting-text {
  font-size: 28rpx;
  color: #9E9E9E;
  margin-top: 8rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #eee;
  border: 2rpx solid #D4AF37; /* 金色边框 */
}

/* 文案卡片 */
.quote-card {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  position: relative;
  box-shadow: 0 8rpx 32rpx rgba(137, 196, 225, 0.15); /* 蓝色魔法光晕 */
  border: 1rpx solid rgba(212, 175, 55, 0.2); /* 金色边框 */
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.quote-content {
  flex: 1;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
}

.quote-text {
  font-size: 30rpx;
  color: #4A4A4A; /* 深灰 */
  line-height: 1.8; /* 增加行高，更优雅 */
  font-weight: 500;
  margin-bottom: 16rpx;
  /* 移除强制衬线体 */
}

.quote-source {
  font-size: 24rpx;
  color: #89C4E1; /* 芙莉莲蓝 */
  text-align: right;
  font-style: italic;
}

.quote-icon {
  background: #F9F9F7; /* 纸白背景 */
  color: #D4AF37; /* 金色图标 */
  width: 60rpx;
  height: 60rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  flex-shrink: 0;
  border: 1rpx solid rgba(212, 175, 55, 0.3);
}

/* 图片卡片 */
.image-card {
  width: 100%;
  height: 420rpx; 
  border-radius: 32rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
  position: relative;
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.08);
  border: 2rpx solid #fff; /* 像照片一样的白边 */
}

.random-img {
  width: 100%;
  height: 100%;
  background-color: #eee; 
}

.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(0,0,0,0) 60%, rgba(74, 74, 74, 0.4)); /* 深灰渐变 */
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding-bottom: 24rpx;
}

/* 扩展按钮样式 */
.extension-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: linear-gradient(135deg, rgba(137, 196, 225, 0.85), rgba(179, 157, 219, 0.85));
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  backdrop-filter: blur(10px);
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.extension-btn:active {
  transform: scale(0.95);
}

.extension-icon {
  font-size: 28rpx;
  animation: sparkle 1.5s ease-in-out infinite;
}

.extension-text {
  color: #fff;
  font-size: 26rpx;
  font-weight: 500;
  letter-spacing: 2rpx;
}

@keyframes sparkle {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.7; transform: scale(1.2); }
}

.image-hint {
  color: rgba(255,255,255,0.95);
  font-size: 24rpx;
  background: rgba(137, 196, 225, 0.4); /* 蓝色半透明 */
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  backdrop-filter: blur(8px);
  border: 1rpx solid rgba(255,255,255,0.3);
  letter-spacing: 2rpx;
}

/* 底部功能区 */
.bottom-grid {
  display: flex;
  gap: 24rpx;
}

.grid-item {
  flex: 1 1 0; 
  background: #ffffff;
  border-radius: 32rpx;
  padding: 32rpx;
  height: 240rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-shadow: 0 8rpx 24rpx rgba(137, 196, 225, 0.1);
  box-sizing: border-box;
  width: 0; 
  border: 1rpx solid rgba(212, 175, 55, 0.15);
}

.grid-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #4A4A4A;
  display: block;
}

/* Time Magic 新版布局 */
.magic-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.total-badge {
  background: #F3E5F5;
  color: #9575CD;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.magic-stats {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
  height: 40rpx; /* 保持高度稳定 */
}

.progress-text {
  font-size: 26rpx;
  color: #9E9E9E;
  font-weight: 500;
}

.event-capsule {
  display: flex;
  align-items: center;
  background: #E1F5FE;
  border-radius: 8rpx;
  padding: 4rpx 12rpx;
  max-width: 65%;
}

.capsule-name {
  font-size: 22rpx;
  color: #0288D1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 90rpx;
}

.capsule-separator {
  width: 2rpx;
  height: 16rpx;
  background: #B3E5FC;
  margin: 0 8rpx;
}

.capsule-days {
  font-size: 22rpx;
  color: #0288D1;
  font-weight: bold;
  white-space: nowrap;
}

.grid-stats {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.grid-desc {
  font-size: 24rpx;
  color: #9E9E9E;
}

.grid-countdown {
  font-size: 22rpx;
  color: #89C4E1;
  background: rgba(137, 196, 225, 0.15);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.contact-icon-box {
  display: flex;
  justify-content: flex-end;
}

.contact-icon {
  font-size: 64rpx;
  opacity: 0.8;
  filter: sepia(0.3); /* 复古滤镜 */
}

.mimic-icon {
  width: 80rpx;
  height: 80rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0,0,0,0.1));
}

/* 翻书动画容器 */
.book-container {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 16rpx 0;
}

.book {
  position: relative;
  width: 60rpx;
  height: 40rpx;
  perspective: 120rpx;
}

.page {
  position: absolute;
  top: 0;
  left: 50%;
  width: 30rpx;
  height: 40rpx;
  background: #89C4E1;
  border: 1rpx solid #fff;
  transform-origin: left center;
  border-radius: 0 4rpx 4rpx 0;
}

.page:nth-child(1) {
  animation: flip 2s infinite ease-in-out;
  animation-delay: 0s;
  background: #B39DDB;
  z-index: 3;
}

.page:nth-child(2) {
  animation: flip 2s infinite ease-in-out;
  animation-delay: 0.3s;
  background: #90CAF9;
  z-index: 2;
}

.page:nth-child(3) {
  background: #E3F2FD;
  z-index: 1;
}

@keyframes flip {
  0% { transform: rotateY(0deg); }
  50% { transform: rotateY(-180deg); }
  100% { transform: rotateY(0deg); }
}

/* 进度条样式 */
.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #F0F4F8;
  border-radius: 6rpx;
  overflow: hidden;
  margin-top: auto; /* 推到底部 */
}

.progress-inner {
  height: 100%;
  background: linear-gradient(90deg, #89C4E1, #B39DDB); /* 蓝紫渐变 */
  border-radius: 6rpx;
  transition: width 0.5s ease;
}

.avatar-group {
  display: flex;
  align-items: center;
}

.mini-avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  margin-right: -16rpx;
  background: #eee;
}

.mini-avatar.more {
  background: #f0f0f0;
  color: #666;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 0;
  z-index: 1;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.6);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(4px);
}

.modal-content {
  background: #fff;
  width: 560rpx;
  border-radius: 48rpx;
  padding: 56rpx 48rpx;
  text-align: center;
  animation: popIn 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.15);
  border: 2rpx solid rgba(212, 175, 55, 0.3); /* 金色边框 */
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #4A4A4A;
  margin-bottom: 16rpx;
}

.modal-desc {
  font-size: 28rpx;
  color: #9E9E9E;
  margin-bottom: 40rpx;
}

.cake-container {
  height: 240rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 32rpx 0 48rpx;
}

.cake-img {
  width: 200rpx;
  height: 200rpx;
  animation: bounce 2s infinite;
  filter: brightness(1.1) contrast(1.1); 
  mix-blend-mode: multiply;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

@keyframes popIn {
  from {
    opacity: 0;
    transform: scale(0.9) translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

.modal-actions {
  display: flex;
  gap: 24rpx;
}

.modal-btn {
  flex: 1;
  height: 88rpx; /* 稍微减小高度 */
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  display: flex; /* 使用 flex 布局确保居中 */
  align-items: center;
  justify-content: center;
  padding: 0; /* 清除默认内边距 */
}

.modal-btn::after {
  border: none;
}

.modal-btn.cancel {
  background: #F0F4F8;
  color: #8E8E93;
}

.modal-btn.confirm {
  background: #89C4E1; /* 芙莉莲蓝 */
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(137, 196, 225, 0.4);
}

/* 大学选择弹窗样式 */
.university-modal {
  padding: 48rpx 40rpx;
}

/* 顶部装饰头像 */
.wish-avatar-wrap {
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto 24rpx;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(137, 196, 225, 0.3);
  border: 4rpx solid #fff;
}

.wish-avatar {
  width: 100%;
  height: 100%;
}

.bounce-text {
  animation: textBounce 2s ease-in-out infinite;
  color: #89C4E1;
  font-size: 26rpx;
}

@keyframes textBounce {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

/* 大学选择列表样式 */
.university-list {
  margin: 32rpx 0;
  background: #F9F9F7;
  border-radius: 24rpx;
  overflow: hidden;
}

.university-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.2s;
}

.university-option:last-child {
  border-bottom: none;
}

.university-option.selected {
  background: rgba(137, 196, 225, 0.1);
}

.university-option:active {
  background: rgba(137, 196, 225, 0.15);
}

.option-text {
  font-size: 30rpx;
  color: #4A4A4A;
}

.university-option.selected .option-text {
  color: #89C4E1;
  font-weight: 500;
}

.option-check {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background: #89C4E1;
  position: relative;
}

.option-check::after {
  content: '';
  position: absolute;
  left: 12rpx;
  top: 8rpx;
  width: 8rpx;
  height: 14rpx;
  border: solid #fff;
  border-width: 0 3rpx 3rpx 0;
  transform: rotate(45deg);
}

/* 密码输入弹窗 */
.password-modal {
  padding: 48rpx 40rpx;
}

.password-input {
  width: 100%;
  height: 88rpx;
  background: #F9F9F7;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  margin: 32rpx 0;
  box-sizing: border-box;
  text-align: center;
  border: 2rpx solid rgba(137, 196, 225, 0.3);
  transition: all 0.3s ease;
}

.password-input.error {
  border-color: #ff6b6b;
  background: #fff5f5;
}

.error-hint {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: -20rpx;
  margin-bottom: 20rpx;
  animation: fadeIn 0.3s ease;
}

.error-icon {
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  background: #ff6b6b;
  color: #ffffff;
  border-radius: 50%;
  font-size: 20rpx;
  margin-right: 12rpx;
}

.error-text {
  font-size: 24rpx;
  color: #ff6b6b;
}

/* 抖动动画 */
.shake {
  animation: shake 0.6s ease;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  10%, 30%, 50%, 70%, 90% { transform: translateX(-10rpx); }
  20%, 40%, 60%, 80% { transform: translateX(10rpx); }
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 日历弹窗样式 */
.calendar-modal {
  padding: 40rpx;
  max-height: 85vh;
  border-radius: 40rpx;
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding: 0 16rpx;
}

.calendar-nav {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #89C4E1;
  background: linear-gradient(135deg, #F0F9FF, #E8F4F8);
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(137, 196, 225, 0.2);
  transition: all 0.2s;
}

.calendar-nav:active {
  transform: scale(0.95);
  background: #E8F4F8;
}

.calendar-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #4A4A4A;
  letter-spacing: 2rpx;
}

.calendar-weekdays {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  text-align: center;
  padding: 20rpx 0;
  margin-bottom: 16rpx;
  background: linear-gradient(135deg, #F9F9F7, #F0F4F8);
  border-radius: 16rpx;
}

.calendar-weekdays text {
  font-size: 24rpx;
  color: #89C4E1;
  font-weight: 500;
}

.calendar-days {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 12rpx;
  padding: 8rpx 0;
}

.calendar-day {
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #4A4A4A;
  border-radius: 16rpx;
  position: relative;
  transition: all 0.2s;
}

.calendar-day:active:not(.empty) {
  transform: scale(0.9);
}

.calendar-day.empty {
  visibility: hidden;
}

.calendar-day.today {
  background: linear-gradient(135deg, #89C4E1, #B39DDB);
  color: #fff;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(137, 196, 225, 0.4);
}

.calendar-day.has-event {
  font-weight: 600;
  background: rgba(212, 175, 55, 0.1);
}

.event-dot {
  position: absolute;
  bottom: 6rpx;
  width: 10rpx;
  height: 10rpx;
  background: linear-gradient(135deg, #D4AF37, #F0C674);
  border-radius: 50%;
  box-shadow: 0 2rpx 4rpx rgba(212, 175, 55, 0.3);
}

.calendar-day.today .event-dot {
  background: #fff;
  box-shadow: 0 2rpx 4rpx rgba(255, 255, 255, 0.5);
}

/* 宝箱怪弹窗样式 */
.mimic-modal {
  padding: 48rpx 40rpx;
  text-align: center;
}

.mimic-title {
  font-size: 40rpx;
