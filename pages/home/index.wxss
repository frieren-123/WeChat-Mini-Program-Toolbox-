.journey-highlight {
  font-size: 30rpx;
  font-weight: 600;
  color: #ffffff;
  margin-top: 20rpx;
  padding: 16rpx 32rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 40rpx;
  backdrop-filter: blur(10rpx);
}

.journey-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: rgba(255, 255, 255, 0.95);
  color: #667eea;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.journey-btn:active {
  background: rgba(255, 255, 255, 0.8);
}
