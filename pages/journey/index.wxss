.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9fa 0%, #e9ecef 100%);
  padding: 40rpx 30rpx 120rpx;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.header-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.header-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 24rpx;
  color: #7f8c8d;
}

.tabs {
  display: flex;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #7f8c8d;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  font-weight: 600;
}

.tab-content {
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.section-intro {
  text-align: center;
  margin-bottom: 30rpx;
}

.intro-text {
  font-size: 26rpx;
  color: #95a5a6;
}

.add-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.emotion-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.emotion-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.emotion-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.emotion-tag {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: #ffffff;
}

.emotion-tag.tag-0 {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.emotion-tag.tag-1 {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.emotion-tag.tag-2 {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.emotion-date {
  font-size: 22rpx;
  color: #95a5a6;
}

.emotion-moment {
  display: block;
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 600;
  margin-bottom: 16rpx;
  line-height: 1.6;
}

.emotion-thought {
  display: block;
  font-size: 26rpx;
  color: #5a6c7d;
  line-height: 1.8;
  margin-bottom: 20rpx;
}

.emotion-delete {
  font-size: 24rpx;
  color: #e74c3c;
  text-align: right;
}

.discovery-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.discovery-card {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.discovery-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.discovery-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.discovery-title {
  font-size: 30rpx;
  color: #2c3e50;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.discovery-subtitle {
  font-size: 24rpx;
  color: #7f8c8d;
}

.discovery-arrow {
  font-size: 48rpx;
  color: #bdc3c7;
}

.question-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.question-text {
  display: block;
  font-size: 30rpx;
  color: #ffffff;
  line-height: 1.8;
  text-align: center;
}

.response-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.response-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.response-content {
  display: block;
  font-size: 26rpx;
  color: #2c3e50;
  line-height: 1.8;
  margin-bottom: 20rpx;
}

.response-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.response-date {
  font-size: 22rpx;
  color: #95a5a6;
}

.response-delete {
  font-size: 24rpx;
  color: #e74c3c;
}

.empty-state {
  text-align: center;
  padding: 80rpx 0;
}

.empty-text {
  font-size: 26rpx;
  color: #95a5a6;
  line-height: 1.8;
  white-space: pre-line;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 600rpx;
  max-height: 80vh;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx;
  overflow-y: auto;
}

.modal-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 30rpx;
  text-align: center;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #5a6c7d;
  margin-bottom: 16rpx;
}

.tag-selector {
  display: flex;
  gap: 16rpx;
}

.tag-option {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #ffffff;
  opacity: 0.5;
  transition: all 0.3s ease;
}

.tag-option.selected {
  opacity: 1;
  transform: scale(1.05);
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #2c3e50;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #2c3e50;
  line-height: 1.6;
}

.form-textarea.large {
  min-height: 300rpx;
}

.modal-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
}

.modal-btn.cancel {
  background: #f8f9fa;
  color: #7f8c8d;
}

.modal-btn.confirm {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}
