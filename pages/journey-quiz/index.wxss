.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx 120rpx;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.header-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.header-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
  text-align: center;
  line-height: 1.6;
}

.quiz-area {
  width: 100%;
}

.progress {
  margin-bottom: 40rpx;
}

.progress-text {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 16rpx;
  text-align: center;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #ffffff;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.question-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.question-text {
  display: block;
  font-size: 32rpx;
  color: #2c3e50;
  line-height: 1.8;
  margin-bottom: 50rpx;
  font-weight: 500;
}

.options {
  margin-bottom: 50rpx;
}

.option {
  display: flex;
  align-items: flex-start;
  padding: 30rpx;
  margin-bottom: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 3rpx solid transparent;
  transition: all 0.3s ease;
}

.option.selected {
  background: #e8f4f8;
  border-color: #667eea;
}

.option-label {
  flex-shrink: 0;
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  background: #667eea;
  color: #ffffff;
  border-radius: 50%;
  font-size: 28rpx;
  font-weight: 600;
  margin-right: 24rpx;
}

.option.selected .option-label {
  background: #764ba2;
}

.option-text {
  flex: 1;
  font-size: 28rpx;
  color: #34495e;
  line-height: 1.7;
  padding-top: 8rpx;
}

.next-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 44rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.result-area {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.result-icon {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.2);
}

.result-card {
  width: 100%;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.result-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 24rpx;
}

.result-score {
  font-size: 72rpx;
  font-weight: 700;
  color: #667eea;
  margin-bottom: 40rpx;
}

.result-message {
  font-size: 28rpx;
  color: #5a6c7d;
  line-height: 1.8;
  text-align: center;
  margin-bottom: 50rpx;
  white-space: pre-line;
}

.result-buttons {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.retry-btn,
.enter-btn,
.back-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 44rpx;
  border: none;
}

.enter-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.retry-btn {
  background: #f8f9fa;
  color: #667eea;
}

.back-btn {
  background: transparent;
  color: #95a5a6;
  border: 2rpx solid #dfe6e9;
}
