page {
  background: #F9F9F7;
}

.container {
  padding: 32rpx;
  padding-bottom: 160rpx;
}

.header {
  margin-bottom: 48rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #4A4A4A;
  display: block;
  font-family: 'Times New Roman', 'Songti SC', serif;
}

.subtitle {
  font-size: 28rpx;
  color: #9E9E9E;
  margin-top: 8rpx;
  display: block;
}

.task-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.task-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
  border: 1rpx solid rgba(0,0,0,0.05);
  transition: all 0.3s ease;
}

.task-card.urgent {
  border-left: 8rpx solid #EF9A9A;
  background: #FFF8F8;
}

.task-info {
  display: flex;
  flex-direction: column;
}

.task-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.task-date {
  font-size: 24rpx;
  color: #999;
}

.task-status {
  text-align: center;
  background: #F0F4F8;
  padding: 12rpx 24rpx;
  border-radius: 16rpx;
  min-width: 100rpx;
}

.task-card.urgent .task-status {
  background: #FFEBEE;
  color: #D32F2F;
}

.days-left {
  font-size: 36rpx;
  font-weight: bold;
  color: #89C4E1;
  display: block;
  line-height: 1;
}

.task-card.urgent .days-left {
  color: #EF5350;
}

.days-unit {
  font-size: 20rpx;
  color: #999;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #ccc;
  font-size: 28rpx;
}

.fab-btn {
  position: fixed;
  bottom: 64rpx;
  right: 48rpx;
  width: 112rpx;
  height: 112rpx;
  background: #89C4E1;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(137, 196, 225, 0.4);
  color: #fff;
  font-size: 64rpx;
  font-weight: 300;
  z-index: 100;
}