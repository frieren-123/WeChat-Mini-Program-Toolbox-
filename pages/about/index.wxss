.container {
  min-height: 100vh;
  padding-bottom: 120rpx; /* 给tabBar留出空间 */
  box-sizing: border-box;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 64rpx 0;
}

.logo-placeholder {
  width: 160rpx;
  height: 160rpx;
  background: #ffffff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(137, 196, 225, 0.2);
  margin-bottom: 24rpx;
  overflow: hidden; 
  border: 2rpx solid rgba(212, 175, 55, 0.3);
}

.app-name {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  color: #4A4A4A;
}

.version {
  font-size: 24rpx;
  color: #89C4E1;
  font-style: italic;
}

.section-title {
  font-size: 26rpx;
  color: #89C4E1;
  margin: 32rpx 32rpx 16rpx;
  font-weight: 500;
}

.menu-list {
  padding: 0 !important; 
  overflow: hidden;
  border: 1rpx solid rgba(212, 175, 55, 0.15);
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 32rpx;
  background: #ffffff;
  border: none;
  border-radius: 0;
  line-height: 1.5;
}

.menu-item:active {
  background: #f9f9f9;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
  font-size: 30rpx;
}

.menu-icon {
  font-size: 36rpx;
}

.menu-text {
  color: #4A4A4A;
}

.menu-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.menu-arrow {
  color: #D4AF37;
  font-weight: 700;
  font-size: 28rpx;
}

.cache-size, .contact-text {
  font-size: 24rpx;
  color: #999;
}

.divider {
  height: 1rpx;
  background: rgba(0,0,0,0.05);
  margin: 0 32rpx;
}

/* 开发者卡片 - 极简风格 */
.developer-card {
  margin-top: 32rpx;
  padding: 32rpx 48rpx;
  text-align: center;
  background: transparent; /* 去掉背景 */
  border: none; /* 去掉边框 */
}

.dev-quote {
  font-size: 24rpx;
  color: #a0a0a0; /* 更淡的颜色 */
  font-style: normal;
  margin-top: 0;
  line-height: 1.8;
  font-family: sans-serif;
  letter-spacing: 1rpx;
}

.footer {
  margin-top: 48rpx;
  margin-bottom: 32rpx;
  text-align: center;
  font-size: 24rpx;
  opacity: 0.6;
}

.icp {
  font-size: 20rpx;
  margin-top: 8rpx;
  color: #999;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
  z-index: 1000;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 85%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.2);
  display: flex; /* Flex布局 */
  flex-direction: column; /* 垂直方向 */
}

/* 隐藏滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  text-align: center;
  margin-bottom: 32rpx;
  color: #4A4A4A;
}

/* 反馈类型选择 */
.feedback-types {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.feedback-type {
  flex: 1;
  text-align: center;
  padding: 16rpx 8rpx;
  font-size: 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  margin: 0 6rpx;
  color: #666;
  transition: all 0.2s;
}

.feedback-type.active {
  background: linear-gradient(135deg, #89C4E1 0%, #B39DDB 100%);
  color: #fff;
}

.feedback-input {
  width: 100%;
  height: 200rpx;
  background: #f9f9f9;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  border: 1rpx solid rgba(137, 196, 225, 0.3);
}

.char-count {
  text-align: right;
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
}

.modal-buttons {
  display: flex;
  margin-top: 32rpx;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  text-align: center;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.modal-btn.confirm {
  background: linear-gradient(135deg, #89C4E1 0%, #B39DDB 100%);
  color: #fff;
}

.modal-btn.share-moments-btn {
  background: linear-gradient(135deg, #a8e063 0%, #56ab2f 100%);
  margin-left: 10rpx;
  color: #fff;
  font-size: 26rpx;
}

.modal-btn.full {
  flex: none;
  width: 100%;
}

/* 更新日志 */
.changelog-modal {
  max-height: 70vh;
}

.changelog-scroll {
  max-height: 50vh;
}

.changelog-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.changelog-item:last-child {
  border-bottom: none;
}

.changelog-version {
  font-size: 32rpx;
  font-weight: 700;
  color: #89C4E1;
}

.changelog-date {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

.changelog-changes {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

/* 信件弹窗样式 */
.letter-modal {
  max-height: 80vh;
  padding: 32rpx;
}

.letter-header-mini {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.letter-stamp {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  border: 2rpx solid #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transform: rotate(5deg);
}

.letter-date {
  font-size: 22rpx;
  color: #999;
  font-style: italic;
}

.letter-scroll {
  max-height: 50vh;
  padding: 0 8rpx;
}

.letter-greeting {
  font-size: 30rpx;
  color: #4A4A4A;
  margin-bottom: 24rpx;
  font-weight: 500;
}

.letter-para {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
  text-indent: 2em;
  line-height: 1.9;
}

.letter-para.letter-quote {
  font-style: italic;
  color: #89C4E1;
  text-align: center;
  text-indent: 0;
  padding: 16rpx;
  background: rgba(137, 196, 225, 0.1);
  border-radius: 12rpx;
  border-left: 4rpx solid #89C4E1;
  margin: 24rpx 0;
}

.letter-signature {
  text-align: right;
  margin-top: 24rpx;
  font-size: 26rpx;
  color: #4A4A4A;
}

.letter-signature .letter-subtitle {
  font-size: 20rpx;
  color: #999;
  margin-top: 6rpx;
}

.share-btn {
  background: linear-gradient(135deg, #89C4E1 0%, #B39DDB 100%) !important;
  color: #fff !important;
  border: none !important;
  line-height: 1 !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
}

.share-btn::after {
  border: none;
}

/* 图标盒子样式 */
.icon-box {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

/* 反馈图标 */
.icon-feedback {
  width: 28rpx;
  height: 24rpx;
  border: 3rpx solid #89C4E1;
  border-radius: 6rpx;
  position: relative;
}
.icon-feedback::after {
  content: '';
  position: absolute;
  bottom: -6rpx;
  left: 6rpx;
  width: 8rpx;
  height: 8rpx;
  border-left: 3rpx solid #89C4E1;
  border-bottom: 3rpx solid #89C4E1;
  transform: skewX(-10deg);
}

/* 上传图标 */
.icon-upload {
  width: 26rpx;
  height: 22rpx;
  border: 3rpx solid #89C4E1;
  border-radius: 4rpx;
  position: relative;
}
.icon-upload::before {
  content: '';
  position: absolute;
  bottom: 8rpx;
  left: 50%;
  width: 3rpx;
  height: 14rpx;
  background: #89C4E1;
  transform: translateX(-50%);
}
.icon-upload::after {
  content: '';
  position: absolute;
  bottom: 18rpx;
  left: 50%;
  width: 0;
  height: 0;
  border-left: 6rpx solid transparent;
  border-right: 6rpx solid transparent;
  border-bottom: 8rpx solid #89C4E1;
  transform: translateX(-50%);
}

/* 日志图标 */
.icon-changelog {
  width: 22rpx;
  height: 28rpx;
  border: 3rpx solid #89C4E1;
  border-radius: 4rpx;
  position: relative;
}
.icon-changelog::before {
  content: '';
  position: absolute;
  top: 6rpx;
  left: 4rpx;
  width: 10rpx;
  height: 2rpx;
  background: #89C4E1;
  box-shadow: 0 6rpx 0 #89C4E1, 0 12rpx 0 #89C4E1;
}

/* 清除图标 */
.icon-clear {
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  border: 3rpx solid #89C4E1;
  position: relative;
}
.icon-clear::before,
.icon-clear::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 14rpx;
  height: 3rpx;
  background: #89C4E1;
}
.icon-clear::before {
  transform: translate(-50%, -50%) rotate(45deg);
}
.icon-clear::after {
  transform: translate(-50%, -50%) rotate(-45deg);
}

/* 隐私图标 */
.icon-privacy {
  width: 22rpx;
  height: 26rpx;
  border: 3rpx solid #89C4E1;
  border-radius: 4rpx 4rpx 8rpx 8rpx;
  position: relative;
}
.icon-privacy::before {
  content: '';
  position: absolute;
  top: -10rpx;
  left: 2rpx;
  width: 12rpx;
  height: 12rpx;
  border: 3rpx solid #89C4E1;
  border-radius: 50%;
  border-bottom: none;
}
.icon-privacy::after {
  content: '';
  position: absolute;
  top: 8rpx;
  left: 50%;
  width: 4rpx;
  height: 8rpx;
  background: #89C4E1;
  transform: translateX(-50%);
  border-radius: 2rpx;
}

/* 协议图标 */
.icon-agreement {
  width: 22rpx;
  height: 28rpx;
  border: 3rpx solid #89C4E1;
  border-radius: 4rpx;
  position: relative;
}
.icon-agreement::before {
  content: '';
  position: absolute;
  top: 6rpx;
  left: 4rpx;
  width: 10rpx;
  height: 2rpx;
  background: #89C4E1;
  box-shadow: 0 6rpx 0 #89C4E1;
}
.icon-agreement::after {
  content: '';
  position: absolute;
  bottom: 4rpx;
  left: 3rpx;
  width: 8rpx;
  height: 4rpx;
  border-left: 2rpx solid #89C4E1;
  border-bottom: 2rpx solid #89C4E1;
  transform: rotate(-45deg);
}

/* 微信图标 */
.icon-wechat {
  width: 28rpx;
  height: 24rpx;
  background: #89C4E1;
  border-radius: 12rpx 12rpx 4rpx 12rpx;
  position: relative;
}
.icon-wechat::before {
  content: '';
  position: absolute;
  top: 6rpx;
  left: 6rpx;
  width: 4rpx;
  height: 4rpx;
  background: #fff;
  border-radius: 50%;
  box-shadow: 8rpx 0 0 #fff;
}

/* 邮件图标 */
.icon-email {
  width: 28rpx;
  height: 20rpx;
  border: 3rpx solid #89C4E1;
  border-radius: 4rpx;
  position: relative;
}
.icon-email::before {
  content: '';
  position: absolute;
  top: 1rpx;
  left: 1rpx;
  width: 10rpx;
  height: 8rpx;
  border-top: 2rpx solid #89C4E1;
  border-left: 2rpx solid #89C4E1;
  transform: rotate(-45deg) translate(2rpx, 2rpx);
}

/* 图片上传区域 */
.image-upload-section {
  margin-top: 20rpx;
}

.upload-title {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  width: 140rpx;
  height: 140rpx;
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
}

.image-item image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border-bottom-left-radius: 8rpx;
}

.add-image {
  width: 140rpx;
  height: 140rpx;
  border: 2rpx dashed #89C4E1;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(137, 196, 225, 0.05);
}

.add-image text {
  font-size: 48rpx;
  color: #89C4E1;
}

/* 上传表单 */
.upload-modal {
  max-height: 80vh;
}

.upload-form {
  max-height: 60vh;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  border: 1rpx solid rgba(137, 196, 225, 0.3);
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  border: 1rpx solid rgba(137, 196, 225, 0.3);
}

.form-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  border: 1rpx solid rgba(137, 196, 225, 0.3);
}

.picker-arrow {
  color: #89C4E1;
  font-size: 32rpx;
}

/* 清除缓存弹窗 */
.clear-modal {
  text-align: center;
  padding: 48rpx 40rpx;
}

.clear-icon-wrap {
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto 24rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E8E 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.clear-icon-inner {
  width: 40rpx;
  height: 48rpx;
  border: 4rpx solid #fff;
  border-radius: 0 0 8rpx 8rpx;
  position: relative;
}

.clear-icon-inner::before {
  content: '';
  position: absolute;
  top: -12rpx;
  left: -8rpx;
  width: 52rpx;
  height: 8rpx;
  background: #fff;
  border-radius: 4rpx;
}

.clear-icon-inner::after {
  content: '';
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  width: 4rpx;
  height: 24rpx;
  background: #fff;
  box-shadow: 12rpx 0 0 #fff;
}

.clear-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #4A4A4A;
  margin-bottom: 12rpx;
}

.clear-size {
  font-size: 26rpx;
  color: #89C4E1;
  margin-bottom: 20rpx;
}

.clear-desc {
  font-size: 26rpx;
  color: #999;
  line-height: 1.8;
  margin-bottom: 32rpx;
}

.clear-warning {
  color: #FF6B6B;
  display: block;
  margin-top: 8rpx;
}

.modal-btn.danger {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E8E 100%);
  color: #fff;
}

/* 隐私政策/用户协议弹窗 */
.policy-modal {
  padding: 40rpx;
}

.policy-header {
  text-align: center;
  margin-bottom: 32rpx;
}

.policy-icon-wrap {
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto 16rpx;
  background: linear-gradient(135deg, #89C4E1 0%, #B39DDB 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.policy-icon-wrap.agreement {
  background: linear-gradient(135deg, #9CCC65 0%, #81C784 100%);
}

.policy-icon-lock {
  width: 28rpx;
  height: 32rpx;
  border: 4rpx solid #fff;
  border-radius: 6rpx 6rpx 10rpx 10rpx;
  position: relative;
}

.policy-icon-lock::before {
  content: '';
  position: absolute;
  top: -14rpx;
  left: 4rpx;
  width: 16rpx;
  height: 14rpx;
  border: 4rpx solid #fff;
  border-radius: 50%;
  border-bottom: none;
}

.policy-icon-doc {
  width: 28rpx;
  height: 36rpx;
  border: 4rpx solid #fff;
  border-radius: 4rpx;
  position: relative;
}

.policy-icon-doc::before {
  content: '';
  position: absolute;
  top: 8rpx;
  left: 4rpx;
  width: 16rpx;
  height: 3rpx;
  background: #fff;
  box-shadow: 0 8rpx 0 #fff, 0 16rpx 0 #fff;
}

.policy-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #4A4A4A;
}

.policy-scroll {
  max-height: 50vh;
}

.policy-section {
  margin-bottom: 24rpx;
}

.policy-subtitle {
  font-size: 28rpx;
  font-weight: 600;
  color: #4A4A4A;
  margin-bottom: 8rpx;
}

.policy-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

.policy-item {
  display: flex;
  align-items: flex-start;
  padding: 12rpx 0;
}

.policy-item-icon {
  width: 32rpx;
  color: #89C4E1;
  font-weight: bold;
  flex-shrink: 0;
}

.policy-item-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.policy-footer-text {
  margin-top: 24rpx;
  padding: 20rpx;
  background: rgba(137, 196, 225, 0.1);
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #89C4E1;
  font-style: italic;
  text-align: center;
}

.modal-buttons.single {
  margin-top: 24rpx;
}
