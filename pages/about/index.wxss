.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 64rpx 0;
  /* background-color: var(--bg-body); 移除背景色 */
}

.logo-placeholder {
  width: 160rpx;
  height: 160rpx;
  background: #ffffff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(137, 196, 225, 0.2); /* 蓝色光晕 */
  margin-bottom: 24rpx;
  overflow: hidden; 
  border: 2rpx solid rgba(212, 175, 55, 0.3); /* 金色边框 */
}

.app-name {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  color: #4A4A4A;
}

.version {
  font-size: 24rpx;
  color: #89C4E1; /* 芙莉莲蓝 */
  font-style: italic;
}

.menu-list {
  padding: 0 !important; 
  overflow: hidden;
  border: 1rpx solid rgba(212, 175, 55, 0.15); /* 金色边框 */
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background: #ffffff;
  border: none;
  border-radius: 0;
  line-height: 1.5;
}

.menu-text {
  color: #4A4A4A;
}

.menu-arrow {
  color: #D4AF37; /* 金色箭头 */
  font-family: serif;
}

.menu-item:active {
  background: #f9f9f9;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
  font-size: 32rpx;
}

.menu-arrow {
  color: #D1D1D6;
  font-weight: 700;
  font-size: 24rpx;
}

.divider {
  height: 1rpx;
  background: var(--border);
  margin: 0 32rpx;
}

.footer {
  margin-top: 64rpx;
  text-align: center;
  font-size: 24rpx;
  opacity: 0.6;
}
