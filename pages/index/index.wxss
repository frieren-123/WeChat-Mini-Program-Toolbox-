.header {
  margin: 20rpx 0 48rpx;
  padding: 0 12rpx;
}

.greeting {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.title {
  font-size: 56rpx;
  font-weight: 800;
  color: var(--text-main);
  letter-spacing: -1rpx;
}

.grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr); /* 改为双列，卡片更大 */
  gap: 24rpx;
}

.tile {
  position: relative;
  background: var(--bg-card);
  border-radius: 32rpx;
  padding: 32rpx;
  height: 240rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.03);
  transition: all 0.2s ease;
  border: 1rpx solid rgba(0,0,0,0.02);
}

.tile--hover {
  transform: scale(0.96);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.02);
}

.tile--disabled {
  opacity: 0.6;
  filter: grayscale(0.8);
}

.tileIcon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  pointer-events: none; /* Prevent icon from blocking clicks */
}

.tileInfo {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tileName {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-main);
}

.tileArrow {
  font-size: 24rpx;
  color: #D1D1D6;
  font-weight: 700;
}

.tileBadge {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  background: #F2F2F7;
  color: #8E8E93;
  border-radius: 999rpx;
  font-weight: 500;
}
